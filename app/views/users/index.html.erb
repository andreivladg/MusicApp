<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= form_tag users_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <% submit_tag "Search" %>
<% end %>
<div class="users">
  <% @users.each do |user| %>
  <p>
      <%= gravatar_for user, size: 30 %>
      <%= link_to user.name, user %>
  </p>
  <% end %>
</div>
